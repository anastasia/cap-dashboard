.meta-container
  clear      : both
  display    : inline-block
  width : 100%
  padding: 0px
  &.black-container
    color: white
    background-color: $color-main-black
  &.tan-container
    background-color: #F6F6F1

.container-generic
  padding:            3px 3px 30px 3px
  width:              100%
  height:             100%
  min-height: 300px;
  .toc-hr
    text-align:       center
    hr
      border:         1px solid $color-main-gray
      margin:         0px

  .ftl-logo
    margin            : 0 auto
    margin-top        : 20px
    float             : none
    width             : 51px
    height            : 74px
    fill : $color-main-blue !important
    .ftl-logo path
      fill : $color-main-blue !important

  .content
    padding-top: 40px
    padding-bottom:   40px

  // .container-title-logo
  //   position: relative
  //   margin: 0 auto

.container-generic-tan
  @extend .container-generic
  background-color: #F6F6F1

.container-generic-blue
  @extend .container-generic
  background-color: $color-main-blue
.container-generic-black
  @extend .container-generic
  background-color: $color-main-black

.limerick-container
  background-color: $color-main-black
  color: white



  .topic-menu,
  .dropdown-topic-menu
    overflow-y       : scroll
    background-color : #FFF
    color            : $color-main-black
    font             : 14px $font-name
    font-weight      : $font-bold
    padding          : 0 14px
    text-align       : left
    li.single-topic
      padding:       7px 0px
      border-bottom: 1px solid $color-main-black
      cursor:        pointer
      &:hover,
      &.selected
        color:         $color-main-blue

  .topic-menu
    margin-left : 0px
    height      : 450px
    li.single-topic
      padding: 12px 0px
      border-bottom : 1px solid $color-light-gray
  .dropdown-topic-menu
    height           : 266px
    width            : 209px
    position         : absolute
    border           : 1px solid $color-main-black

  /* GENERAL */

  body
    font-family: 'Rajdhani', sans-serif
    font-weight     : 300
    color           : $color-main-black

  hr
    border : 1px solid $color-main-gray

  .col-centered
    float: none
    margin: 0 auto

  /* DASHBOARD */


.dashboard-title-container,
.wordclouds-title-container,
.topic-title-container,
.container-generic,
.container-generic-tan
  width       : 100%
  line-height : 32px
  text-align  : center
  padding     : 23px
  a.read-more:hover, a.read-more:active
    color : $color-main-blue
    text-decoration : none
